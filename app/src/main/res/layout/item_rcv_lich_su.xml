<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@drawable/pop_2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ls_ngayDat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18/05/2023"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tv_hd_trangThai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GIAO THAT BAI"
                    android:textColor="#FF0000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="end"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_ls_tenMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pizza chesse"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_ls_soLuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 phan"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/open_sans_light"
                    />

                <TextView
                    android:id="@+id/tv_ls_giaMon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="150000 VND"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_ls_soDienThoai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="034321880"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ls_diaChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 , ngo 20, my dinh, nam tu liem, Ha noi"
                    android:fontFamily="@font/open_sans_light"
                    android:textSize="16sp"
                    android:textStyle="bold"/>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>