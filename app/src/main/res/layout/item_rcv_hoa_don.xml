<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="14dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/iv_img_donHang"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:src="@drawable/pop_2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_gravity="center"
          >

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


              <TextView
                  android:id="@+id/tv_hd_trangThai"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="ĐANG GIAO HÀNG"
                  android:textColor="#0B71ED"
                  android:textSize="16sp"
                  android:textStyle="bold"
                  android:gravity="end"/>


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="5dp"
              android:paddingBottom="5dp">

              <TextView
                  android:id="@+id/tv_hd_content"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="content"
                  android:textSize="18sp"
                  android:textStyle="bold"/>

          </LinearLayout>



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="5dp">

              <TextView
                  android:id="@+id/tv_hd_soDienThoai"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="034321880"
                  android:fontFamily="@font/open_sans_light"
                  android:textSize="16sp"
                  android:textStyle="bold"/>



          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/tv_hd_diaChi"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="2 , ngo 20, my dinh, nam tu liem, Ha noi"
                  android:fontFamily="@font/open_sans_light"
                  android:textSize="16sp"
                  android:textStyle="bold"/>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_margin="5dp"
                  android:background="@android:color/holo_red_dark" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">


                  <TextView
                      android:text="Tổng Tiền:"
                      android:layout_margin="5dp"
                      android:layout_width="100dp"
                      android:textColor="#F44336"
                      android:textSize="18dp"
                      android:fontFamily="@font/open_sans_light"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>
                  <TextView
                      android:id="@+id/id_sum"
                      android:textStyle="bold"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="5dp"
                      android:text="500000"
                      android:textSize="18dp"
                      android:textColor="#F44336"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </LinearLayout>

          </LinearLayout>

          <Button
              android:id="@+id/btn_daNhanHang"
              android:layout_width="260dp"
              android:layout_height="40dp"
              android:background="@drawable/bg_button"
              android:fontFamily="@font/open_sans_light"
              android:text="Đã nhận hàng"
              android:textSize="16dp"
              android:textStyle="bold"
              app:backgroundTint="@null"
              android:layout_marginRight="30dp"
              android:layout_marginTop="10dp"
              />




      </LinearLayout>


    </LinearLayout>





</androidx.cardview.widget.CardView>